    }

    /* Gallery */
    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
      gap: 15px;
    }

    .gallery img {
      width: 100%;
      height: 160px;
      object-fit: cover;
      border-radius: 6px;
      border: 1px solid var(--gray);
    }

    /* Sponsors */
    .sponsors {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 20px;
      align-items: center;
      text-align: center;
    }

    .sponsor {
      background: var(--gray);
      padding: 20px;
      border-radius: 6px;
      color: var(--white);
      font-weight: bold;
    }

    /* Competitive Features */
    .features {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }

    .feature-card {
      background: linear-gradient(135deg, var(--gray), var(--dark-gray));
      padding: 20px;
      border-radius: 8px;
      border: 1px solid var(--blue);
    }

    .feature-card h3 {
      margin-top: 0;
      color: var(--turquoise);
    }

    footer {
      background: var(--black);
      padding: 20px;
      text-align: center;
      font-size: 0.85rem;
      color: #888;
      border-top: 1px solid var(--gray);
    }

    a { color: var(--blue); text-decoration: none; }
  </style>
</head>
